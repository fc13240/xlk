/**app.wxss**/
page{
  width:100%;
  height: 100%;
  background-color: #f4f4f4;
}
.container {
  height: 100%;
  width: 100%;
} 
.juan_style{
    border: 1rpx solid #ff425f;border-radius: 2rpx;height: 32rpx;display: inline-block;
  }
.juan_style_left{
    font-size: 20rpx;color: #ffeff2;background-color: #f51d46;height: 100%;display: inline-block;padding: 0 5rpx;
    
  }
.juan_style_right{
    font-size: 20rpx;color: #f51d46;background-color: #ffeff2;height: 100%;display: inline-block;padding: 0 5rpx;
  }
  .return_num_style{
    padding: 0 5rpx;color: #ff8a1e;font-size: 20rpx;border-radius: 2rpx;border: 1rpx solid #ff8a1e;display: inline-block;margin-left: 10rpx;
  }
  .product{
  width: 100%;
}
.product_child{
  width:50%;
  box-sizing: border-box;
  display: inline-block;
  font-size: 0;
  background-color: #ffffff;
  border-bottom: 10rpx solid #f4f4f4;
}
.product_child:nth-child(odd){
   border-right: 5rpx solid #f4f4f4;
}
.product_child:nth-child(even){
   border-left: 5rpx solid #f4f4f4;
}

.product_child image{
  width:100%;
  height:370rpx;
}

.product_name{
  padding: 10rpx;
}

.name_text{
  width: 100%;
  color: #333333;
  font-size: 26rpx;
  line-height: 40rpx;
  height: 40rpx;
}

.name_text{
  color: #333333;
  font-size: 26rpx;
}
.price,.corner,.rmb{
  color: #f51d46;
}
.price,.corner{
font-size: 20rpx;
}
.rmb{
  font-size: 32rpx;
}

.volumn{
  color: #999999;
  font-size: 24rpx;
  float: right;
  margin-top: 5rpx;
}
.break{
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.all_btn{
  background-color: #f6f6f6;
   position: fixed;
  bottom: 0;
  width: 100%;
  border-top: 1px solid #e9e9e9;
}
.all_btn button{
  background-color: rgb(255, 82, 109);
  color: white;
  font-size: 32rpx;
  width: 90%;
  margin: 30rpx auto;
}
.goTop{
  position: fixed;
  right: 28rpx;
  bottom: 20rpx; 
  border-radius: 50%;
  
}
.goTop image{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  border: 1rpx solid #d3d3d3;
}
.load{
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin-bottom: 10rpx;
}