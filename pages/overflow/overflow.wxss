/* pages/overflow/overflow.wxss */
.overflow{
  width: 100%;
  font-size: 0;
  height: 100%;
  position: fixed;
  top: 0;
}
.overflow .nav{
  width: 100%;
  height: 180rpx;
  
}
.tab view{
  display: inline-block;
  font-size: 28rpx;
  text-align: center;
  width: 25%;
  color: white;
  background-color: #414141;
  padding: 15rpx 0;
}
.tab-item.active{
  background-color: #ff425f;
}



.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: flex-start;
  border-bottom: 2rpx solid #f4f4f4;

}

.avatar {
  width: 240rpx;
  height: 224rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
   width: 240rpx;
  height: 224rpx;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  flex-grow: 2;
  margin-left: 10rpx;
  height: 224rpx;
  position: relative;
}

.expertInfo .name {
  font-size: 32rpx;
  color: #333;
  height: 48rpx;
  overflow: hidden;
}
.tab-content {
  background: white;
}
.overflow .old_price{
  font-size: 20rpx;
    color: #999;
    margin-left: 10rpx;
    text-decoration: line-through;
}
.des{
  display:flex;align-items:flex-end;position:absolute;bottom:0;
}
.btn{
  border-radius: 50rpx;
    margin-top: 5rpx;
    width: 116rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: #ff425f;
    line-height: 46rpx;
    display: inline-block;
    margin:10rpx 0;
}
.scoll-h{
  overflow: scroll;
  height: 100%;
}