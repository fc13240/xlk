/* pages/searchPage/searchPage.wxss */
.searchPage{
  width: 100%;
  height: 100%;
  background-color: white;
}
.search{
  width: 100%;
  background-color: #f4f4f4;
  display: flex;
  display: -webkit-flex;
  flex-wrap: nowrap;
  position:fixed;
  z-index: 999;
  top: 0;
}
.search view{
  flex-grow: 2;
  display: flex;
  background-color: white;
  padding: 10rpx;
  border-radius: 10rpx;
  margin: 10rpx 0 10rpx 30rpx;
}
.search image{
  width: 40rpx;
  height: 40rpx;
}
.search input{
  flex-grow: 2;
  height: 30rpx!important;
  min-height: 30rpx!important;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-top: 5rpx;
  font-size: 24rpx;
  color: #333;
}
.search text{
  width: 100rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  margin-top: 18rpx;
}
.search_history{
  font-size: 28rpx;
  padding: 36rpx;
  margin-top: 80rpx;
}
.search_history .title{
  color: #666;
}
.keyword{
 margin: 10rpx 0;
}
.keyword view{
  color: #333;
  border: 1px solid #f4f4f4;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin: 10rpx;
  display: inline-block;
}
.trash{
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  right: 0;
  top: 5rpx;
}
.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: white;
  font-size: 14px;
  white-space: nowrap;
   position: fixed;
  top: 76rpx;
  left: 0;
  z-index: 99; 
  border-bottom: 1rpx solid #e1e1e1;
}

.tab-item {
   display: inline-block; 
  color: #666;
  width: calc(100%/3);
  text-align: center

}

.tab-item.active {
  color: #ff425f;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 124rpx;
  background: #ff425f;
  position: absolute;
  bottom: 0;
  left: calc((100% - 124rpx)/2);
  border-radius: 16rpx;
}