/* pages/exchangeList/exchangeList.wxss */

.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: white;
  font-size: 14px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  border-bottom: 1rpx solid #e1e1e1;
   border-top: 1rpx solid #e1e1e1;
}

.tab-item {
   display: inline-block; 
  color: #666;
  width: calc(100%/3);
  text-align: center

}

.tab-item.active {
  color: #ff425f;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100rpx;
  background: #ff425f;
  position: absolute;
  bottom: 0;
  left: calc((100% - 100rpx)/2);
  border-radius: 16rpx;
}

.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: flex-start;
  border-bottom: 2rpx solid #f4f4f4;
}

.avatar {
  width: 200rpx;
  height: 110rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  flex-grow: 2;
  line-height: 40rpx;
  margin-left: 10rpx;
}

.expertInfo .name {
  font-size: 24rpx;
  color: #333;
}

.askBtn {
  font-size: 24rpx;
  color: #ff425f;
}

.tab-content {
  margin-top: 80rpx;
  background: white;
}

.scoll-h {
  height: 100%;
}
.tip{
  background-color: #f4f4f4;
  text-align: center;
  font-size: 24rpx;
  color: #666;
  line-height: 50rpx;
}
.date{
  color: #999;
  font-size: 20rpx;
}
.ex_num{
  font-size: 20rpx;
    color: rgb(51, 51, 51);
}